{
  "name": "app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch:pug2html": "pug --basedir src/ src/pug/ --hierarchy -o dist/ -w -P",
    "start:server": "browser-sync start -s dist -w src/*.html src/css/*.css src/js/*.js",
    "compile:css2cssprefix": "postcss dist/css/style.css -u autoprefixer -o dist/css/style.css",
    "compile:scss2css": "node-sass src/scss/ --importer node_modules/node-sass-globbing/index.js --output dist/css/ --output-style expanded --source-map dist/css",
    "compile:scss2cssprefix": "run-s compile:scss2css compile:css2cssprefix",
    "watch:scss2cssprefix": "chokidar \"src/scss/\" --command \"npm run compile:scss2cssprefix\" --initial",
    "watch:babel2js": "babel src/js --watch --out-dir dist/js --source-maps",
    "watch:webpack": "webpack",
    "watch:img": "chokidar \"src/img/**/*\" --command \"node imagemin.js\" --initial",
    "delete:dist": "rimraf dist",
    "copy:sitemapxml": "cpx \"src/sitemap.xml\" dist/",
    "copy:robotstxt": "cpx \"src/robots.txt\" dist/",
    "copy:manifestjson": "cpx \"src/manifest.json\" dist/",
    "copy:faviconico": "cpx \"src/favicon.ico\" dist/",
    "copy:apple-touch-iconpng": "cpx \"src/apple-touch-icon.png\" dist/",
    "prewatch:all": "run-s delete:dist copy:sitemapxml copy:robotstxt copy:manifestjson copy:faviconico copy:apple-touch-iconpng",
    "watch:all": "run-p watch:pug2html watch:scss2cssprefix watch:webpack watch:img start:server",
    "lint:scss": "stylelint \"**/*.scss\"",
    "format:scss": "stylelint --fix \"**/*.scss\"",
    "lint:js": "eslint src/js/**/*.js",
    "format:js": "eslint src/js/**/*.js --fix",
    "format:all": "run-p format:scss format:js",
    "min:css": "cleancss -o dist/css/style.css dist/css/style.css",
    "min:js": "uglifyjs dist/js/main.js -o dist/js/main.js",
    "delete:map": "rimraf dist/**/*.map",
    "prepare:all": "run-p min:js min:css delete:map"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "autoprefixer": "^9.8.6",
    "babel-loader": "^8.1.0",
    "braces": "^3.0.2",
    "browser-sync": "^2.26.12",
    "chokidar-cli": "^2.1.0",
    "clean-css-cli": "^4.3.0",
    "cpx": "^1.5.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "imagemin-cli": "^6.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.0",
    "imagemin-svgo": "^8.0.0",
    "node-sass": "^4.14.1",
    "node-sass-globbing": "0.0.23",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "prettier": "^2.1.1",
    "pug-cli": "github:pugjs/pug-cli#master",
    "rimraf": "^3.0.2",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.18.0",
    "uglify-es": "^3.3.9",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  }
}
