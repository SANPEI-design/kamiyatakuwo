extends /_includes/_layout

block content
  section.l-page
    .answer
      h1.answer__title--correct
        img.answer__title-image--correct(src="/img/text_correct.svg", alt="あたり")
      ul.answer__list.card-list
        li.card-list__item
          .card
            p.card__number.text-large
              | イ
            p.card__text
              | つまづいたら何度だって
              br
              | 起きあがればいいんだよなあ
        li.card-list__item
          .card.is-selected
            p.card__number.text-large
              | ロ
            p.card__text
              | 毎日少しずつ
              br
              | それがなかなかできねんだなあ
        li.card-list__item
          .card
            p.card__number.text-large
              | ハ
            p.card__text
              | できない約束は
              br
              | しないことだな
        li.card-list__item
          .card
            p.card__number.text-large
              | ニ
            p.card__text
              |体験してはじめて
              br
              | 身につくんだなあ
      .answer__button-area.button-area
        button.button(type="button")
          | 次の問題