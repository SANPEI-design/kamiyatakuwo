extends /_includes/_layout

block content
  section.l-page
    .answer.js-quiz
      h1.answer__title--miss
        img.answer__title-image--miss(src="/img/text_miss.svg", alt="はずれ")
      ul.answer__list.card-list
        li.card-list__item
          .card.js-answer
            p.card__number.text-large.js-answer-number
              | イ
            p.card__text.js-answer-text
              | つまづいたら何度だって
              br
              | 起きあがればいいんだよなあ
        li.card-list__item
          .card.js-answer
            p.card__number.text-large.js-answer-number
              | ロ
            p.card__text.js-answer-text
              | 毎日少しずつ
              br
              | それがなかなかできねんだなあ
        li.card-list__item
          .card.js-answer.is-selected
            p.card__number.text-large.js-answer-number
              | ハ
            p.card__text.js-answer-text
              | できない約束は
              br
              | しないことだな
        li.card-list__item
          .card.js-answer
            p.card__number.text-large.js-answer-number
              | ニ
            p.card__text.js-answer-text
              |体験してはじめて
              br
              | 身につくんだなあ
      .answer__button-area.button-area--2column
        button.button(type="button")
          | 正解をみる
        button.button(type="button")
          | やり直す
  .modal
    .modal__content
      p.modal__title.text-large
        | 正解
      p.modal__number
        | ロ
      p.modal__text
        | 毎日少しずつ
        br
        | それがなかなかできねんだなあ
      .modal__button-area.button-area
        button.button(type="button")
          | 次の問題