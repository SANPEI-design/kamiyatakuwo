block variables

doctype
html.is-hidden(lang="ja")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="description", content="スーパーサラリーマン「かみやたくを」の名言を当てろ！あなたは何問解けるかな？")
    meta(property="og:title", content="名言クイズ「かみやたくを」")
    //- og:typeの分岐
    if page === 'top'
      meta(property="og:type", content="website")
    else
      meta(property="og:type", content="article")
    meta(property="og:url", content="https://kamiyatakuwo.sanpei-design.com")
    meta(property="og:image", content="https://kamiyatakuwo.sanpei-design.com/img/ogp.png")
    meta(property="og:site_name", content="名言クイズ「かみやたくを」")
    meta(property="og:description", content="スーパーサラリーマン「かみやたくを」の名言を当てろ！あなたは何問解けるかな？")
    title 名言クイズ「かみやたくを」
    link(rel="manifest", href="/manifest.json")
    link(rel="stylesheet", href="/css/style.css")
    link(rel="icon" href="/favicon.ico")
    link(rel="apple-touch-icon" href="/apple-touch-icon.png")
    script(type="module" src="/js/main.js" defer)
    //- webフォント
    script(src="https://use.typekit.net/mxt1jra.js" async)
  if page === undefined
    body
      block content
  else
    body(data-page=`${page}`)
      block content
